public class nomor1{
	public int fibo (int i){
		if (i==0){
			return 0;
		}
		else if (i==1){
			return 1;
		}
		else{
			return fibo(i-1)+fibo(i-2);
		}
	}
	
	public static void main (String[] args){
		nomor1 n=new nomor1();
		
		int input=7;
		int jum=0;
		for(int i=1;i<=input;i++){
			jum+=n.fibo(i);
		}
			System.out.print(jum);
	}
}
